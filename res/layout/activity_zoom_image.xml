<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" 
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp" >

        <TextView
            android:id="@+id/tvImageDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/image_descrition"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tvImageVisibleUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/image_visible_url"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff" />
    </LinearLayout>

    <com.ortiz.touch.TouchImageView
        android:id="@+id/tivZoomImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/camera_gray" 
        android:background="#33ffffff"/>

</RelativeLayout>